<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.solvd.dao.IUsersDAO">
    <resultMap id="users" type="com.solvd.model.Users">
        <id property="id_user" column="id_user"/>
        <result property="login" column="login"/>
        <result property="total_ammount" column="total_ammount"/>

    </resultMap>
    <select id="getUsersByLogin" resultMap="users">
        select login from Users where login = #{login}
    </select>

    <select id="getUsersAmmount" resultMap="users">
        select login, total_ammount from Users where login = #{login}
    </select>

    <update id="updateAmmount" parameterType="com.solvd.model.Users">
        update Users
        set total_ammount = #{total_ammount}
        where login = #{login}
    </update>
</mapper>